{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post list</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Datecreated</th>
                <th>Content</th>
                <th>Name </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.author.username }}</td>
                <td>{{ post.dateCreated|date("d/M/Y") }}</td>
                <td>{{ post.content }}</td>
                <td>{% for image in post.postImages %} {{ image }}</br> {% endfor %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_new') }}">Create a new entry</a>
        </li>
        <li>
          <a href="{{ path('homepage') }}">Go back to the homepage</a>
        </li>
    </ul>
{% endblock %}
